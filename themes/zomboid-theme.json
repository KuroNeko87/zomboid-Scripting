{
    "name": "Zomboid Scripting Theme",
    "type": "dark",
    "colors": {
        "editor.foreground": "#E0E0E0",
        "editor.background": "#1E1E1E",
        "editor.lineHighlightBackground": "#2A2A2A",
        "editor.selectionBackground": "#264F78",
        "editorCursor.foreground": "#A7A7A7",
        "editorIndentGuide.background": "#3E3E3E"
    },
    "tokenColors": [
        {
            "scope": "keyword.control.parameter.zomboid",
            "settings": {
                "foreground": "#D19A66", // Light orange for keywords
                "fontStyle": "bold"
            }
        },
        {
            "scope": "constant.language.boolean.zomboid",
            "settings": {
                "foreground": "#E06C75", // Red for booleans
                "fontStyle": "bold"
            }
        },
        {
            "scope": "keyword.control.recipetag.zomboid",
            "settings": {
                "foreground": "#61AFEF", // Blue for recipe tags
                "fontStyle": "italic"
            }
        },
        {
            "scope": "keyword.control.skill.zomboid",
            "settings": {
                "foreground": "#98C379", // Green for skills
                "fontStyle": "bold"
            }
        },
        {
            "scope": "entity.name.function.timedAction.zomboid",
            "settings": {
                "foreground": "#C678DD", // Purple for timed actions
                "fontStyle": "italic"
            }
        },
        {
            "scope": "entity.name.function.scripttype.zomboid",
            "settings": {
                "foreground": "#E5C07B", // Golden yellow for script types
            }
        },
        {
            "scope": "entity.name.function.itemtag.zomboid",
            "settings": {
                "foreground": "#56B6C2", // Cyan for item tags
                "fontStyle": "italic"
            }
        },
        {
            "scope": "entity.name.function.itemflag.zomboid",
            "settings": {
                "foreground": "#D19A66", // Light orange for item flags
            }
        },
        {
            "scope": "entity.name.function.itemmodifier.zomboid",
            "settings": {
                "foreground": "#E06C75", // Red for modifiers
                "fontStyle": "bold"
            }
        },
        {
            "scope": "entity.name.function.itemmode.zomboid",
            "settings": {
                "foreground": "#61AFEF", // Blue for item modes
            }
        },
        {
            "scope": "entity.name.function.inputtype.zomboid",
            "settings": {
                "foreground": "#ABB2BF", // Neutral gray for input types
            }
        },
        {
            "scope": "punctuation.separator.zomboid",
            "settings": {
                "foreground": "#E0E0E0", // White for punctuation
            }
        }
    ]
}
